@model IEnumerable<CapaDatos.Models.Factura>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mesa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mesero)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mesa.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mesero.Apellidos)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NroFactura">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NroFactura">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NroFactura">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
